{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "src/types"],
    "noImplicitAny": false,
    "paths": {
      "@/*": ["*"],
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@constants/*": ["src/constants/*"],
      "@data/*": ["src/data/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@prisma/*": ["prisma/*"],
      "@generated/*": ["generated/*"],
      "@public/*": ["public/*"]
    },
    "incremental": true
  },
  "include": ["src/**/*", "prisma/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "generated"]
}
